{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/mocha-framework",
      "@wdio/appium-service"
    ],
    "target": "es2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
